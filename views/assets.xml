<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Local FullCalendar JS -->
    <record id="rich_production_fullcalendar_js" model="ir.asset">
        <field name="name">Rich Production FullCalendar JS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/lib/fullcalendar.min.js</field>
        <field name="sequence">10</field>
    </record>
    
    <!-- Custom Calendar Implementation JS -->
    <record id="rich_production_calendar_js" model="ir.asset">
        <field name="name">Rich Production Calendar JS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/src/js/rich_production_calendar.js</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Custom Calendar CSS -->
    <record id="rich_production_calendar_css" model="ir.asset">
        <field name="name">Rich Production Calendar CSS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/src/css/rich_production_calendar.css</field>
    </record>

    <!-- 添加CSS到assets bundle -->
    <record id="rich_production_custom_css" model="ir.asset">
        <field name="name">Rich Production Custom CSS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/src/css/rich_production.css</field>
        <field name="sequence">30</field>
    </record>
    
    <!-- Window Calculation Modules -->
    <record id="rich_production_xo_ox_window_js" model="ir.asset">
        <field name="name">Rich Production XO OX Window Calculations</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/src/js/window_calculations/xo_ox_window.js</field>
        <field name="sequence">40</field>
    </record>
    
    <!-- Cutting List Preview Modules -->
    <record id="rich_production_cutting_list_preview_js" model="ir.asset">
        <field name="name">Rich Production Cutting List Preview</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">/rich_production/static/src/js/cutting_list_preview.js</field>
        <field name="sequence">50</field>
    </record>
</odoo> 