<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- 列表视图 - 订单列表 -->
    <record id="view_rich_production_list" model="ir.ui.view">
        <field name="name">rich_production.production.list</field>
        <field name="model">rich_production.production</field>
        <field name="arch" type="xml">
            <list string="Order List">
                <field name="name" string="Production"/>
                <field name="invoice_ids" string="Invoices" widget="many2many_tags"/>
                <field name="customer_id" string="Customer"/>
                <field name="total_items" string="Items"/>
                <field name="batch" string="Batch"/>
                <field name="batch_number" string="Batch No."/>
                <field name="production_date" string="Production Date"/>
                <field name="user_id" invisible="1"/>
                <button name="action_view_details" string="View" type="object" icon="fa-eye" class="text-primary"/>
                <button name="action_cutting_list" string="Cutting List" type="object" class="btn btn-primary"/>
            </list>
        </field>
    </record>

    <!-- 发票列表视图 -->
    <record id="view_invoice_list_embedded" model="ir.ui.view">
        <field name="name">account.move.list.embedded</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Invoices">
                <field name="name" string="Invoice Number"/>
                <field name="partner_id" string="Customer"/>
                <field name="invoice_date" string="Invoice Date"/>
                <field name="amount_total" string="Amount" sum="Total"/>
                <field name="amount_untaxed" string="Untaxed" sum="Total Untaxed"/>
                <field name="state" string="Status"/>
            </list>
        </field>
    </record>

    <!-- 表单视图 -->
    <record id="view_rich_production_form" model="ir.ui.view">
        <field name="name">rich_production.production.form</field>
        <field name="model">rich_production.production</field>
        <field name="arch" type="xml">
            <form class="o_form_full_width">
                <header>
                    <div class="float-right d-print-none">
                        <button name="action_cutting_list" string="下料单" type="object" class="btn btn-primary" icon="fa-cut"/>
                    </div>
                </header>
                <sheet class="oe_form_sheet_width_wider">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="Production Name"/>
                                </h1>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3 class="mb-0">
                                            <label for="batch_number" string="Batch No." class="oe_edit_only"/>
                                            <field name="batch_number" placeholder="输入批次编号..." required="1"/>
                                        </h3>
                                    </div>
                                    <div class="col-md-6">
                                        <h4 class="mb-0 mt-2">
                                            <label for="batch" string="Batch Name" class="oe_edit_only"/>
                                            <field name="batch" placeholder="输入批次名称..." required="1"/>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <group>
                                <field name="capacity"/>
                                <field name="total_items" readonly="1"/>
                                <field name="customer_id"/>
                                <field name="user_id"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </div>
                        <div class="col-md-6">
                            <group>
                                <field name="production_date"/>
                                <field name="start_date"/>
                                <field name="stop_date"/>
                                <field name="duration" string="Duration (Days)" readonly="1"/>
                            </group>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <group string="Order Information">
                                <field name="customer_id"/>
                                <field name="total_items" readonly="1"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Orders" name="orders">
                            <field name="invoice_ids" widget="many2many" options="{'no_create': True}" context="{'list_view_ref': 'rich_production.view_invoice_list_embedded'}"/>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <group string="Order Information">
                                        <field name="customer_id"/>
                                        <field name="total_items" readonly="1"/>
                                    </group>
                                </div>
                            </div>
                        </page>
                        <page string="Product Details" name="products">
                            <div class="oe_button_box" name="products_button_box">
                                <button name="action_refresh_product_lines" type="object" 
                                        string="刷新产品明细" class="btn btn-secondary"
                                        help="从关联的发票重新加载产品明细行" />
                                <button name="action_force_save_lines_sql" type="object" 
                                        string="直接SQL保存" class="btn btn-danger"
                                        help="通过直接SQL操作保存产品明细行" />
                                <button name="action_inspect_invoice_fields" type="object" 
                                        string="检查发票字段" class="btn btn-info"
                                        help="检查发票行项目的字段，帮助诊断映射问题" />
                            </div>
                            <field name="product_line_ids" class="o_list_view_extended" widget="one2many" mode="tree,form" options="{'reload_on_button': true}">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="display_name"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="width" string="Width"/>
                                    <field name="height" string="Height"/>
                                    <field name="frame" string="Frame"/>
                                    <field name="glass" string="Glass"/>
                                    <field name="color" string="Color"/>
                                    <field name="grid" string="Grid"/>
                                    <field name="argon" string="Argon"/>
                                    <field name="unit_price" sum="Total"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="invoice_name"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Enter notes here..."/>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter additional description here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 搜索视图 -->
    <record id="view_rich_production_search" model="ir.ui.view">
        <field name="name">rich_production.production.search</field>
        <field name="model">rich_production.production</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="batch_number"/>
                <field name="batch"/>
                <field name="customer_id"/>
                <field name="user_id"/>
                <filter string="My Productions" name="my_productions" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Has Batch Number" name="has_batch_number" domain="[('batch_number', '!=', False)]"/>
                <filter string="Has Batch" name="has_batch" domain="[('batch', '!=', False)]"/>
                <filter string="Multiple Orders" name="multiple_orders" domain="[('invoice_ids', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Batch No." name="group_batch_number" context="{'group_by': 'batch_number'}"/>
                    <filter string="Batch" name="group_batch" context="{'group_by': 'batch'}"/>
                    <filter string="Customer" name="customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Production Date" name="production_date" context="{'group_by': 'production_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- 裁剪清单表单视图 -->
    <record id="view_rich_production_cutting_form" model="ir.ui.view">
        <field name="name">rich_production.production.cutting.form</field>
        <field name="model">rich_production.production</field>
        <field name="arch" type="xml">
            <form string="Cutting List" create="true" edit="true">
                <sheet class="oe_form_sheet_width_wider">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="oe_button_box" name="button_box" style="text-align: right; margin-bottom: 10px;">
                                <button name="action_print_cutting_list" type="object" class="oe_stat_button" icon="fa-print">
                                    <div class="o_field_widget o_stat_info">
                                        <span class="o_stat_text">打印下料单</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                    <field name="name" invisible="1" required="1" />
                    <group>
                        <group>
                            <field name="batch_number" placeholder="输入批次编号..."/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="production_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="选择订单">
                        <field name="invoice_ids" widget="many2many" options="{'no_create': True}" context="{'list_view_ref': 'rich_production.view_invoice_list_embedded'}" nolabel="1"/>
                    </group>
                    <group string="Product Details">
                        <field name="product_line_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="display_name"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="frame"/>
                                <field name="glass"/>
                                <field name="color"/>
                                <field name="grid"/>
                                <field name="argon"/>
                                <field name="unit_price"/>
                                <field name="invoice_name"/>
                            </list>
                        </field>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Enter notes here..." nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" name="action_print_cutting_list" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- 生产日历动作 -->
    <record id="action_rich_production_production" model="ir.actions.act_window">
        <field name="name">生产</field>
        <field name="res_model">rich_production.production</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                创建您的第一个生产记录
            </p>
        </field>
    </record>

    <!-- 生产列表动作 -->
    <record id="action_rich_production_list" model="ir.actions.act_window">
        <field name="name">Order List</field>
        <field name="res_model">rich_production.production</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rich_production_list"/>
        <field name="search_view_id" ref="view_rich_production_search"/>
        <field name="domain">[('invoice_ids', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first order
            </p>
            <p>
                Manage your production orders.
            </p>
        </field>
    </record>

    <!-- 批次分组视图 - 生产列表 -->
    <record id="view_rich_production_batch_list" model="ir.ui.view">
        <field name="name">rich_production.production.batch.list</field>
        <field name="model">rich_production.production</field>
        <field name="arch" type="xml">
            <list string="Batch Production">
                <field name="batch_number" string="Batch No."/>
                <field name="batch" string="Batch Name"/>
                <field name="capacity" string="Capacity"/>
                <field name="total_items" string="Total Items"/>
                <field name="customer_id" string="Customer"/>
                <field name="production_date" string="Production Date"/>
                <field name="start_date" string="Start Date"/>
                <field name="stop_date" string="End Date"/>
                <field name="notes" string="Notes"/>
                <field name="user_id" string="Responsible"/>
                <button name="action_view_details" string="View" type="object" icon="fa-eye" class="text-primary"/>
            </list>
        </field>
    </record>

    <!-- 批次生产列表动作 -->
    <record id="action_rich_production_batch_list" model="ir.actions.act_window">
        <field name="name">Batch Production</field>
        <field name="res_model">rich_production.production</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rich_production_batch_list"/>
        <field name="search_view_id" ref="view_rich_production_search"/>
        <field name="context">{'search_default_group_batch': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first batch production
            </p>
            <p>
                Organize your production records by batch.
            </p>
        </field>
    </record>

    <!-- 生产Owl日历客户端动作 -->
    <record id="action_production_owl_calendar" model="ir.actions.client">
        <field name="name">Owl Production Calendar</field>
        <field name="tag">rich_production.action_production_calendar</field>
    </record>
</data>
</odoo> 